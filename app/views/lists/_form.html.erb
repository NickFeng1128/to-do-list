<div class="form container">  
  <%= form_for @list do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :due_date,'Due Date' %>
      <%= f.text_field :due_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :note, 'Note' %>
      <%= f.text_area :note, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image, 'Image' %>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", method: :new,class: "btn btn-default" %>
    </div>

    <div class="form-group">
      <%= link_to "Back to List",lists_path, class: "btn btn-default" %>
    </div>
  <% end %>
</div>
