
<table class="table table-striped table-condensed">
  <% @lists.each do |list|%>
    <tr>
      <td>
        <div class="checkbox">
          <label><input type="checkbox", value=" "></label>
        </div>
      </td>
      <td><%= list.due_date %></td>
      <td><%= list.name %></td>
      <td><%= link_to 'Show', list_path(list) %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list_path(list), method: :delete, data:{ confirm: "Are yuo sure? "} %></td>
    </tr>
    <% end %>
</table>

